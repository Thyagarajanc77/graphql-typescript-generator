{
    "include": [
        "src/index.ts",
        "src/cli.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "esnext.asynciterable",
            "es2017.object"
        ],
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": false
    }
}